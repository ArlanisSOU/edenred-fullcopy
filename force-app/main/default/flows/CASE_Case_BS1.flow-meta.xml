        <rules>
            <name>decCaseRTUserCase</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>ER_User_Case_RT</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>updSubjectUserCase</targetReference>
